.rich-text {
  h2,
  ul,
  ol,
  p {
    @apply mt-3;
  }
  h1 {
    @apply text-2xl font-bold;
  }
  h2 {
    @apply font-bold;
  }
  ol {
    @apply list-decimal list-outside ml-5;
  }
  ul {
    @apply list-outside ml-5 list-disc;
  }
  a {
    @apply text-gray-900 font-medium;
    &:hover {
      text-decoration: underline;
    }
  }
}
